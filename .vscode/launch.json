{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug app",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug:app"
            ],
            "env": {
                "TS_NODE_CACHE": "0"
            },
            "port": 9229,
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug tests",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug:jest"
            ],
            "port": 9228
        }
    ]
}
