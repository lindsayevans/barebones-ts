{
    "name": "barebones-ts",
    "version": "1.0.0",
    "description": "Barebones ts-node script",
    "scripts": {
        "start": "ts-node src/app.ts",
        "watch": "tsnd --respawn src/app.ts",
        "build": "tsc",
        "clean": "rimraf dist",
        "test": "jest",
        "test:watch": "jest --watch",
        "typecheck": "tsc --noEmit",
        "typecheck:watch": "tsc -w --noEmit"
    },
    "devDependencies": {
        "@types/jest": "^23.3.14",
        "@types/node": "^10.14.1",
        "jest": "^23.6.0",
        "rimraf": "^2.6.3",
        "ts-jest": "^23.10.5",
        "ts-node": "^7.0.1",
        "ts-node-dev": "^1.0.0-pre.32",
        "tsconfig-paths": "^3.8.0",
        "typescript": "^3.3.3333"
    }
}
